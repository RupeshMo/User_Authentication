<%= render 'shared/errors', object: @article %>

<h1>Create new article.....</h1>

<div class="form-container">
  <%= form_with model: @article, url: '/articles', method: :post, local: true do |f|%>
    <%=f.label :title%>
    <%=f.text_field :title%>
        
    <%=f.label :description%>
    <%=f.text_area :description%>

    <%= f.submit%>
  <%end%>  
  
</div>