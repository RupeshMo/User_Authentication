<%= render 'shared/errors', object: @article %>

<h1>Create new article.....</h1>

<div class="article-form-container">
  
  <%= form_with model: @article do |f|%>
    <div class='form-fields'>
      
      
      <div class="title-field">
        <%=f.label :title, class: "label"%>
        <%=f.text_field :title, class: "input", placeholder: "Enter title"%>
      </div>
      
      <div class="description-field">    
        <%=f.label :description, class: "label"%>
        <%=f.text_area :description, class: "input", placeholder: "Enter description"%>
      </div>

      <div class="category-field">
        <%=f.label :category, class: "label"%>
        <%= f.collection_select :category_ids, Category.all, :id, :name, {
          prompt: "Make your selection"
        },
        { multiple: true}
         %>

        <%# <%=f.text_field :title, class: "input", placeholder: "Enter title"%>
      </div>
    
    </div>
    
    <div class='article-button'>
      <%= f.submit :Submit, class: "article-ff"%>
    </div>
  <%end%>  

</div>
